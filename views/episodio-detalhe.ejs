    <main class="px-[64px] py-8">
        <div class="max-w-2xl mx-auto">
            <h1 class="text-3xl font-bold text-[#3A5B22] mb-4">
                <%= episodio.epititulo %>
            </h1>
            <p class="text-sm text-gray-600 mb-4">
                <%= podnome %>
            </p>

            <div class="bg-white p-6 rounded-lg shadow-md mb-6">
                <p class="mb-2"><strong>Descrição:</strong>
                    <%= episodio.epidescricao || 'Sem descrição' %>
                </p>
                <p class="mb-2"><strong>URL:</strong> <a href="<%= episodio.epiurl %>" target="_blank"
                        class="text-[#3A5B22] hover:underline">
                        <%= episodio.epiurl %>
                    </a></p>
                <p class="mb-2"><strong>Duração:</strong>
                    <%= episodio.epiduracao_segundos ? `${episodio.epiduracao_segundos} segundos` : 'Não informada' %>
                </p>
                <p class="mb-2"><strong>Data:</strong>
                    <%= episodio.epidata %>
                </p>
                <p class="mb-2"><strong>Reproduções:</strong>
                    <%= episodio.epireproducoes %>
                </p>
            </div>

            <!-- Player de Áudio -->
            <div class="bg-[#3A5B22] p-4 rounded-lg shadow-md mb-6 text-white" style="max-width: 820px;">
                <div class="flex items-center">
                    <div class="w-36">
                        <img width="150" height="150" style="border-radius: 8px" src="https://via.placeholder.com/150"
                            alt="Capa do episódio" />
                    </div>
                    <div class="ml-4 flex-1">
                        <small style="opacity: 0.7">PODWAVE • EPISÓDIO <%= episodio.epicodigo %></small>
                        <h3 class="text-lg font-semibold">
                            <%= episodio.epititulo %>
                        </h3>
                        <audio controls style="width: 100%; opacity: 0.7; margin-top: 8px;" id="audio-player">
                            <source src="/episodios/<%= episodio.podcodigo %>/<%= episodio.epicodigo %>/audio"
                                type="audio/mpeg" />
                            Seu navegador não suporta o elemento de áudio.
                        </audio>
                        <div class="mt-2 flex justify-between items-center text-sm">
                            <form action="/episodios/<%= episodio.podcodigo %>/<%= episodio.epicodigo %>/favoritar"
                                method="POST" class="mr-4">
                                <button type="submit"
                                    class="bg-white text-[#3A5B22] px-3 py-1 rounded hover:bg-gray-200">
                                    <%= isFavorito ? 'Desfavoritar' : 'Favoritar' %>
                                </button>
                            </form>
                            <form id="rating-form"
                                action="/episodios/<%= episodio.podcodigo %>/<%= episodio.epicodigo %>/avaliar"
                                method="POST" class="inline-flex items-center space-x-1">
                                <input type="hidden" name="nota" id="rating-input">
                                <div id="star-rating" class="inline-flex items-center space-x-1">
                                    <% for(let i=1; i <=5; i++) { %>
                                        <span data-rating="<%= i %>" class="cursor-pointer">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                                                fill="currentColor"
                                                class="w-6 h-6 <%= i <= (avaliacaoUsuario || 0) ? 'text-yellow-700' : 'text-gray-400' %>">
                                                <path fill-rule="evenodd"
                                                    d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                                                    clip-rule="evenodd"></path>
                                            </svg>
                                        </span>
                                        <% } %>
                                </div>
                                <span id="rating-feedback" class="ml-2 text-sm text-white">
                                    <%= avaliacaoUsuario ? `${avaliacaoUsuario} estrela${avaliacaoUsuario> 1 ? 's' :
                                        ''}` : 'Não avaliado' %>
                                </span>
                            </form>
                        </div>
                        <div class="mt-2 flex justify-between text-sm">
                            <a href="#" class="text-white opacity-70 hover:opacity-100" title="Assinar">ASSINAR</a>
                            <a href="#" class="text-white opacity-70 hover:opacity-100"
                                title="Compartilhar">COMPARTILHAR</a>
                            <a href="#" class="text-white opacity-70 hover:opacity-100" title="Mais informações">MAIS
                                INFO</a>
                            <span class="text-white opacity-70">PodWave</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Progresso -->
            <div class="bg-white p-6 rounded-lg shadow-md mb-6">
                <h3 class="text-xl font-semibold text-[#3A5B22] mb-4">Progresso</h3>
                <p class="text-gray-600 mb-2">Progresso atual: <%= progresso %> segundos</p>
                <form action="/episodios/<%= episodio.podcodigo %>/<%= episodio.epicodigo %>/progresso" method="POST">
                    <input type="number" name="progresso_segundos" value="<%= progresso %>"
                        class="p-2 border rounded text-gray-900" required>
                    <button type="submit"
                        class="bg-[#3A5B22] text-white px-4 py-2 rounded hover:bg-[#2F4A1B] ml-2">Atualizar
                        Progresso</button>
                </form>
            </div>

            <!-- Comentários -->
            <section class="bg-[#D7DED2] py-8 lg:py-16 antialiased">
                <div class="max-w-2xl mx-auto px-[64px]">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-lg lg:text-2xl font-bold text-[#3A5B22]">Comentários (<%= comentarios.length %>)
                        </h2>
                    </div>
                    <form action="/episodios/<%= episodio.podcodigo %>/<%= episodio.epicodigo %>/comentar" method="POST"
                        class="mb-6">
                        <div class="py-2 px-4 mb-4 bg-white rounded-lg rounded-t-lg border border-gray-200">
                            <label for="comment" class="sr-only">Seu comentário</label>
                            <textarea id="comment" name="comentario" rows="6"
                                class="px-0 w-full text-sm text-gray-900 border-0 focus:ring-0 focus:outline-none"
                                placeholder="Escreva um comentário..." required></textarea>
                        </div>
                        <button type="submit"
                            class="inline-flex items-center py-2 px-4 text-xs font-medium text-center text-white bg-[#3A5B22] rounded-lg hover:bg-[#2F4A1B] focus:ring-4 focus:ring-[#4A6B32]">
                            Enviar comentário
                        </button>
                    </form>
                    <% if (comentarios && comentarios.length> 0) { %>
                        <% comentarios.forEach(comentario=> { %>
                            <article class="p-6 mb-3 text-base bg-white rounded-lg border-t border-gray-200">
                                <footer class="flex justify-between items-center mb-2">
                                    <div class="flex items-center">
                                        <p class="inline-flex items-center mr-3 text-sm text-[#3A5B22] font-semibold">
                                            <img class="mr-2 w-6 h-6 rounded-full" src="https://via.placeholder.com/24"
                                                alt="<%= comentario.usuarioEmail %>">
                                            <%= comentario.usuarioEmail %>
                                        </p>
                                        <p class="text-sm text-gray-600"><time pubdate
                                                datetime="<%= comentario.comdata %>"
                                                title="<%= new Date(comentario.comdata).toLocaleDateString('pt-BR', { year: 'numeric', month: 'long', day: 'numeric' }) %>">
                                                <%= new Date(comentario.comdata).toLocaleDateString('pt-BR', {
                                                    month: 'short' , day: 'numeric' , year: 'numeric' }) %>
                                            </time></p>
                                    </div>
                                    <button id="dropdownComment<%= comentario.comcodigo %>Button"
                                        data-dropdown-toggle="dropdownComment<%= comentario.comcodigo %>"
                                        class="inline-flex items-center p-2 text-sm font-medium text-center text-gray-500 bg-white rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-50 dark:bg-gray-900 dark:hover:bg-gray-700"
                                        type="button">
                                        <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                            fill="currentColor" viewBox="0 0 16 3">
                                            <path
                                                d="M2 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm6.041 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM14 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Z" />
                                        </svg>
                                        <span class="sr-only">Configurações do comentário</span>
                                    </button>
                                    <div id="dropdownComment<%= comentario.comcodigo %>"
                                        class="hidden z-10 w-36 bg-white rounded divide-y divide-gray-100 shadow">
                                        <ul class="py-1 text-sm text-gray-700"
                                            aria-labelledby="dropdownMenuIconHorizontalButton">
                                            <li><a href="#" class="block py-2 px-4 hover:bg-gray-100">Editar</a></li>
                                            <li><a href="#" class="block py-2 px-4 hover:bg-gray-100">Remover</a></li>
                                            <li><a href="#" class="block py-2 px-4 hover:bg-gray-100">Reportar</a></li>
                                        </ul>
                                    </div>
                                </footer>
                                <p class="text-gray-600">
                                    <%= comentario.comtexto %>
                                </p>
                                <div class="flex items-center mt-4 space-x-4">
                                    <button type="button"
                                        class="flex items-center text-sm text-gray-600 hover:underline font-medium">
                                        <svg class="mr-1.5 w-3.5 h-3.5" aria-hidden="true"
                                            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 18">
                                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 5h5M5 8h2m6-3h2m-5 3h6m2-7H2a1 1 0 0 0-1 1v9a1 1 0 0 0 1 1h3v5l5-5h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1Z" />
                                        </svg>
                                        Responder
                                    </button>
                                </div>
                            </article>
                            <% }); %>
                                <% } else { %>
                                    <p class="text-gray-600">Nenhum comentário ainda...</p>
                                    <% } %>
                </div>
            </section>

            <a href="/episodios/<%= episodio.podcodigo %>"
                class="text-[#3A5B22] hover:underline mt-6 block text-center">Voltar para lista de episódios</a>
        </div>
    </main>

