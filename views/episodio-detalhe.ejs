    <script>
        // JavaScript para alternar o menu ao clicar no botão
        const userMenuToggle = document.getElementById('user-menu-toggle');
        const userMenu = document.getElementById('user-menu');

        userMenuToggle.addEventListener('click', () => {
            userMenu.classList.toggle('hidden');
        });

        // Fechar o menu ao clicar fora
        document.addEventListener('click', (event) => {
            if (!userMenuToggle.contains(event.target) && !userMenu.contains(event.target)) {
                userMenu.classList.add('hidden');
            }
        });

        // Toggle para dropdowns de comentários
        document.querySelectorAll('[data-dropdown-toggle]').forEach(button => {
            button.addEventListener('click', () => {
                const dropdownId = button.getAttribute('data-dropdown-toggle');
                const dropdown = document.getElementById(dropdownId);
                dropdown.classList.toggle('hidden');
            });
        });

        document.addEventListener('click', (event) => {
            document.querySelectorAll('.z-10').forEach(dropdown => {
                if (!dropdown.contains(event.target) && !event.target.hasAttribute('data-dropdown-toggle')) {
                    dropdown.classList.add('hidden');
                }
            });
        });

        // Sistema de avaliação com estrelas usando formulário
        const starRating = document.getElementById('star-rating');
        const ratingForm = document.getElementById('rating-form');
        const ratingInput = document.getElementById('rating-input');
        const ratingFeedback = document.getElementById('rating-feedback');
        let currentRating = `<%= avaliacaoUsuario || 0 %>`;

        starRating.addEventListener('click', (e) => {
            const star = e.target.closest('span[data-rating]');
            if (star) {
                const rating = parseInt(star.getAttribute('data-rating'));
                currentRating = rating;

                // Atualiza as estrelas visualmente
                starRating.querySelectorAll('span[data-rating]').forEach(s => {
                    const starValue = parseInt(s.getAttribute('data-rating'));
                    s.querySelector('svg').classList.toggle('text-yellow-700', starValue <= rating);
                    s.querySelector('svg').classList.toggle('text-gray-400', starValue > rating);
                });

                // Atualiza o campo oculto e o feedback
                ratingInput.value = rating;
                ratingFeedback.textContent = `Sua avaliação: ${currentRating} estrela${currentRating > 1 ? 's' : ''}`;

                // Envia o formulário
                ratingForm.submit();
            }
        });

        // Inicializa as estrelas com o valor atual
        starRating.querySelectorAll('span[data-rating]').forEach(star => {
            const starValue = parseInt(star.getAttribute('data-rating'));
            star.querySelector('svg').classList.toggle('text-yellow-700', starValue <= currentRating);
            star.querySelector('svg').classList.toggle('text-gray-400', starValue > currentRating);
        });
    </script>
