<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">Adicionar Novo Podcast</h1>
    <% if (error) { %>
      <p class="text-red-500 mb-4"><%= error %></p>
    <% } %>
    <form action="/meusPodcasts/adicionar" method="POST" class="max-w-md">
      <div class="mb-4">
        <label for="podnome" class="block text-sm font-medium">Nome</label>
        <input type="text" id="podnome" name="podnome" required class="w-full p-2 border rounded">
      </div>
      <div class="mb-4">
        <label for="poddescricao" class="block text-sm font-medium">Descrição</label>
        <textarea id="poddescricao" name="poddescricao" class="w-full p-2 border rounded"></textarea>
      </div>
      <div class="mb-4">
        <label for="podurl" class="block text-sm font-medium">URL</label>
        <input type="text" id="podurl" name="podurl" class="w-full p-2 border rounded">
      </div>
      <div class="mb-4">
        <label for="catcodigo" class="block text-sm font-medium">Categoria</label>
        <select id="catcodigo" name="catcodigo" class="w-full p-2 border rounded">
          <% categorias.forEach(categoria => { %>
            <option value="<%= categoria.catcodigo %>">
              <%= categoria.catnome %>
            </option>
          <% }) %>
        </select>
      </div>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Adicionar</button>
      <a href="/meusPodcasts" class="ml-2 text-blue-500">Cancelar</a>
    </form>
  </div>
</body>
</html>